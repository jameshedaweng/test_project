<h1>Listing Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Published On</th>
      <% if current_user.admin? %>
        <th>User</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.publish_date %></td>
        <% if current_user.admin? %>
          <td><%= article.user.email %></td>
        <% end %>
        <td>
          <%= link_to 'Show', article, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info" %>
          <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Article', new_article_path, class: "btn btn-success" %>
<%= link_to 'Back to home', root_path, class: "btn btn-default" %>
